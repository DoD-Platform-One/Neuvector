{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "main"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate: Update NeuVector Package Dependencies",
  "draftPR": true,
  "labels": [
    "neuvector",
    "renovate",
    "Package Sustainment",
    "kind::maintenance"
  ],
  "enabledManagers": [
    "helmv3",
    "custom.regex"
  ],
  "separateMajorMinor": false,
  "postUpdateOptions": [
    "helmUpdateSubChartArchives"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "groupName": "neuvector",
      "description": "Group all Iron Bank and Core updates into one MR",
      "postUpgradeTasks": {
        "commands": [
          "bump-chart-yaml",
          "bump-changelog '{{#each upgrades}}- {{depName}} {{currentVersion}} -> {{newVersion}}\\n{{/each}}'",
          "regenerate-helm-docs"
        ],
        "fileFilters": [
          "chart/Chart.yaml",
          "README.md",
          "CHANGELOG.md"
        ],
        "executionMode": "branch"
      }
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update helm chart version in Chart.yaml",
      "managerFilePatterns": [
        "/^chart/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s+(?<currentValue>.+)-bb\\.\\d+"
      ],
      "autoReplaceStringTemplate": "version: {{{newValue}}}-bb.0",
      "depNameTemplate": "core",
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://neuvector.github.io/neuvector-helm/"
    },
    {
      "customType": "regex",
      "description": "Update app version in Chart.yaml",
      "managerFilePatterns": [
        "/^chart/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s+[\"']?(?<currentValue>[^\\s\\n\"']+)[\"']?",
        "- NeuVector:\\s+(?<currentValue>[^\\s\\n]+)"
      ],
      "depNameTemplate": "registry1.dso.mil/ironbank/neuvector/neuvector/controller",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update images list in Chart.yaml",
      "managerFilePatterns": [
        "/^chart/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "image:[^\\S\\r\\n]+(?<depName>.+):(?<currentValue>.+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update upstream tag in values.yaml",
      "managerFilePatterns": [
        "/^chart/values\\.yaml$/"
      ],
      "matchStrings": [
        "upstream:\\s+[\\s\\S]*?registry:\\s+registry1\\.dso\\.mil\\s+tag:\\s+(?<currentValue>[^\\s\"']+)"
      ],
      "depNameTemplate": "registry1.dso.mil/ironbank/neuvector/neuvector/controller",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update global images in values.yaml",
      "managerFilePatterns": [
        "/^chart/values\\.yaml$/"
      ],
      "matchStrings": [
        "(?:controller|manager|enforcer):\\s+tag:\\s+(?<currentValue>[^\\s\"']+)\\s+image:\\s+(?<imageName>[^\\s\"']+)\\s+registry:\\s+(?<registryPath>registry1\\.dso\\.mil[^\\s\"']*)"
      ],
      "depNameTemplate": "{{{registryPath}}}/{{{imageName}}}",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update images in values.yaml",
      "managerFilePatterns": [
        "/^chart/values\\.yaml$/"
      ],
      "matchStrings": [
        "repository:\\s+(?<depName>[^\\s\"']+)\\s+tag:\\s+[\"']?(?<currentValue>[^\\s\"']+)[\"']?"
      ],
      "depNameTemplate": "registry1.dso.mil/{{{depName}}}",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Test images in txt file",
      "managerFilePatterns": [
        "/^tests/images\\.txt$/"
      ],
      "matchStrings": [
        "(?<depName>.+):(?<currentValue>.+)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
